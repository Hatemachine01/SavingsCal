  <script>
  
  function Validation() {
  	var x = document.getElementById("frm1").elements.namedItem("total_income").value;
  if (x !== "") {
    Calculator();
  } else {
  	alert("Something's wrong with your data");
  	return false;
  	}
  }	

  function Calculator() {
    var total_income = document.getElementById("frm1").elements.namedItem("total_income").value;
    var percentage = document.getElementById("frm1").elements.namedItem("percentage").value;
    var result = Math.ceil(total_income / 100 * percentage) ;

    document.getElementById("results").innerHTML = 'You can save: $ ' + result;
    document.getElementById("alternative1").innerHTML ='15%: ' +  Math.ceil(total_income / 100 * 15);
    document.getElementById("alternative2").innerHTML ='30%: ' +  Math.ceil(total_income / 100 * 30);
    document.getElementById("alternative3").innerHTML ='45%: ' +  Math.ceil(total_income / 100 * 45);
   }
